<%= render 'layouts/errors', obj: @group %>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Group</h1>
      <%= form_with model: @group do |f| %>
        <div class="form-group">
          <h4>グル-プ名</h4>
          <%= f.text_field :name, class: "form-control name" %>
        </div>
        <div class="form-group">
          <h4>紹介文</h4>
          <%= f.text_area :introduction, class: "form-control introduction" %>
        </div>
        <div class="form-group">
        <h4>グループ画像</h4>
        <%= f.file_field :image, class: "form-control-image", accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.submit "Editing Group",class: "btn btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>